<div class="row mx-auto" style="width: 50%;">
    <div class="col md-4 mx-auto">
        <div class="card">
        <div class="card-header">
            Registrar Usuario
        </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
                    </div>
                    <div class="form-group mt-3">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Password" value="{{confirm_password}}">
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary" style="width: 100%;">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>